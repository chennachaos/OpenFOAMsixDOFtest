FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleDyMFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         10.0;

deltaT          0.001;

writeControl    timeStep;

writeInterval   100;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;


// ************************************************************************* //

// ************************************************************************* //

// ************************************************************************* //
functions
{
    forces
    {
        type                forces;
        functionObjectLibs  ("libforces.so");
        writeControl        timeStep;
        writeInterval       1;

        patches             ("cylinder");
        p                   p;
        U                   U;
        rho                 rhoInf;
        log                 true; 
        CofR                (0 0 0);     
        rhoInf              1.00;
    }

    sixDoFRigidBodyState
    {
        type               sixDoFRigidBodyState;
        libs               ("libsixDoFRigidBodyState.so");
        angleFormat        degrees;
        writeControl       timeStep;
        writeInterval      1;
    }
}

